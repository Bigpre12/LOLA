# ============================================
# LOLA Environment Variables
# ============================================
# Copy this file to .env.local for local development
# For Railway: Add these in the Variables tab
# ============================================

# ============================================
# DATABASE (Required)
# ============================================
# Option 1: Supabase (recommended)
DATABASE_URL="postgresql://postgres:[YOUR-PASSWORD]@db.[YOUR-PROJECT-REF].supabase.co:6543/postgres?pgbouncer=true"
DIRECT_URL="postgresql://postgres:[YOUR-PASSWORD]@db.[YOUR-PROJECT-REF].supabase.co:5432/postgres"

# Option 2: Railway Postgres (if using Railway's built-in Postgres)
# DATABASE_URL will be auto-injected by Railway
# DIRECT_URL="${DATABASE_URL}"

# Option 3: Neon
# DATABASE_URL="postgresql://user:pass@ep-xxx.us-east-1.aws.neon.tech/neondb?sslmode=require"
# DIRECT_URL="${DATABASE_URL}"

# ============================================
# SUPABASE STORAGE (Optional - for file uploads)
# ============================================
NEXT_PUBLIC_SUPABASE_URL="https://[YOUR-PROJECT-REF].supabase.co"
NEXT_PUBLIC_SUPABASE_ANON_KEY="your-anon-key"
SUPABASE_SERVICE_ROLE_KEY="your-service-role-key"

# ============================================
# AUTH (Required)
# ============================================
# Generate with: openssl rand -base64 32
NEXTAUTH_SECRET="your-secret-key-here"

# Local: http://localhost:3000
# Railway: https://your-app.up.railway.app
NEXTAUTH_URL="http://localhost:3000"

# Google OAuth (optional but recommended)
GOOGLE_CLIENT_ID="your-google-client-id"
GOOGLE_CLIENT_SECRET="your-google-client-secret"

# Email Provider for Magic Links (optional)
# Use Resend (free tier available): https://resend.com
RESEND_API_KEY="re_xxxxxxxxxxxx"
EMAIL_FROM="LOLA <noreply@yourdomain.com>"

# ============================================
# AI PROVIDERS (At least one required)
# ============================================
# Together AI - FREE tier with Flux Schnell
TOGETHER_API_KEY="your-together-api-key"

# Fal.ai - $10 free credits
FAL_KEY="your-fal-api-key"

# OpenAI - DALL-E 3
OPENAI_API_KEY="your-openai-api-key"

# Replicate
REPLICATE_API_TOKEN="your-replicate-token"

# Stability AI
STABILITY_API_KEY="your-stability-api-key"

# Ideogram (best for text in images)
IDEOGRAM_API_KEY="your-ideogram-api-key"

# Video Providers (optional)
RUNWAY_API_KEY="your-runway-api-key"
KLING_API_KEY="your-kling-api-key"
LUMA_API_KEY="your-luma-api-key"
PIKA_API_KEY="your-pika-api-key"

# ============================================
# APP SETTINGS
# ============================================
# Local: http://localhost:3000
# Railway: https://your-app.up.railway.app
NEXT_PUBLIC_APP_URL="http://localhost:3000"

# Node environment
NODE_ENV="development"
